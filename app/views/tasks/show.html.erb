<div id="title">
  <div>
    <h3>Task - <%= @task.title %></h3>
  </div>

  <div>
    <h4>Details:</h4>
    <p><%= @task.details %></p>
  </div>

  <div>
    <%= link_to "edit", edit_task_path(@task) %>
    <%= link_to "Back to List", tasks_path %>
    <%= link_to "Delete",
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </div>

</div>
<style>
#title {
  display: flex;
  justify-content: center;
  flex-direction: column;

}
</style>
